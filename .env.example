# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT Configuration (for OAuth tokens)
JWT_SECRET=your-secure-random-secret-min-32-chars
JWT_EXPIRES_IN=3600

# FHIR Server Configuration
FHIR_BASE_URL=https://your-domain.com/fhir
FHIR_SERVER_NAME=ArkPass FHIR Server
FHIR_SERVER_VERSION=1.0.0

# OAuth Client Credentials (for Projectathon testing)
# These are the credentials you'll give to Infoway testers
OAUTH_CLIENT_ID=projectathon-test-client
OAUTH_CLIENT_SECRET=your-secure-client-secret

# Infoway Gazelle Configuration (optional)
GAZELLE_ENDPOINT=https://infoway-gazelle.ca
